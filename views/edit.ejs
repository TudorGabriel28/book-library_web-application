<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="edit-book content">
    <form action="/books/<%= book._id %>" method="POST">
      <label for="title">Book title:</label>
      <input type="text" id="title" name="title" value="<%=book.title%>" required>
      <label for="author">Book author:</label>
      <input type="text" id="author" name="author" value="<%=book.author%>" required>
      <label for="body">Book body:</label>
      <textarea id="body" name="body" required><%=book.body%></textarea>
      <button>Save Changes</button>

      <a class="delete" data-doc="<%= book._id %>">Delete Book</a>
    </form>

    
  </div>

  <%- include("./partials/footer.ejs") %>

    <script>
    const delBtn = document.querySelector('a.delete');

    delBtn.addEventListener('click', (e) => {
      const endpoint = `/books/${delBtn.dataset.doc}`;

      fetch(endpoint, {
        method: 'DELETE',
      })
      .then(response => response.json())
      .then(data => window.location.href = data.redirect)
      .catch(err => console.log(err));
    });
    
  </script>

</body>
</html>